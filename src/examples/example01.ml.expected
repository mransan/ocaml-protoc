type person = {
  mutable _presence: Pbrt.Bitfield.t; (** presence for 3 fields *)
  mutable name : string;
  mutable id : int32;
  mutable email : string;
  mutable phone : string list;
}

let default_person (): person =
{
  _presence=Pbrt.Bitfield.empty;
  name="";
  id=0l;
  email="";
  phone=[];
}


(** {2 Make functions} *)

let[@inline] person_has_name (self:person) : bool = (Pbrt.Bitfield.get self._presence 0)
let[@inline] person_has_id (self:person) : bool = (Pbrt.Bitfield.get self._presence 1)
let[@inline] person_has_email (self:person) : bool = (Pbrt.Bitfield.get self._presence 2)

let[@inline] person_set_name (self:person) (x:string) : unit =
  self._presence <- (Pbrt.Bitfield.set self._presence 0); self.name <- x
let[@inline] person_set_id (self:person) (x:int32) : unit =
  self._presence <- (Pbrt.Bitfield.set self._presence 1); self.id <- x
let[@inline] person_set_email (self:person) (x:string) : unit =
  self._presence <- (Pbrt.Bitfield.set self._presence 2); self.email <- x
let[@inline] person_set_phone (self:person) (x:string list) : unit =
  self.phone <- x

let copy_person (self:person) : person =
  { self with name = self.name }

let make_person 
  ?(name:string option)
  ?(id:int32 option)
  ?(email:string option)
  ?(phone=[])
  () : person  =
  let _res = default_person () in
  (match name with
  | None -> ()
  | Some v -> person_set_name _res v);
  (match id with
  | None -> ()
  | Some v -> person_set_id _res v);
  (match email with
  | None -> ()
  | Some v -> person_set_email _res v);
  person_set_phone _res phone;
  _res

